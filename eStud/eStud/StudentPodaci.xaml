        <Button x:Name="btnIzmenii" Content="Izmeni" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Click="btnIzmeni_Click" Background="#FF31B6A4" BorderBrush="{x:Null}" Margin="1305.5,23,0,0" Height="37"/>
        <StackPanel x:Name="pnlDodajStud" HorizontalAlignment="Left" Height="554.5" Margin="803,85.5,0,0" VerticalAlignment="Top" Width="778"/>
        <Border BorderBrush="#FFA8A8A8" BorderThickness="1,1,2,1" HorizontalAlignment="Left" Height="1007.5" VerticalAlignment="Top" Width="798"/>

    </Grid>
</UserControl>
