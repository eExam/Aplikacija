        <Button x:Name="btnDodajStud" Content="Dodaj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" Click="btnDodajStud_Click" Background="#FF21A896" Height="36" BorderBrush="{x:Null}" Margin="918.5,24,0,0" OpacityMask="#FFDAB3B3" RenderTransformOrigin="0.5,0.5"/>
